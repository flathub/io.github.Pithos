{
  "app-id": "io.github.Pithos",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.28",
  "sdk": "org.gnome.Sdk",
  "command": "pithos",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",

    "--env=GST_PLUGIN_PATH_1_0=/app/lib/gstreamer-1.0",

    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf",
    "--talk-name=org.freedesktop.secrets",

    "--talk-name=org.freedesktop.Notifications",

    "--talk-name=org.gnome.SettingsDaemon",
    "--talk-name=org.gnome.SettingsDaemon.MediaKeys",
    "--talk-name=org.mate.SettingsDaemon",

    "--talk-name=org.gnome.ScreenSaver",
    "--talk-name=org.cinnamon.ScreenSaver",
    "--talk-name=org.freedesktop.ScreenSaver",
    "--talk-name=com.canonical.Unity.Session",

    "--talk-name=org.kde.StatusNotifierWatcher",
    "--talk-name=com.canonical.indicator.application",

    "--own-name=org.mpris.MediaPlayer2.pithos"
  ],
  "modules": [
    "libappindicator.json",
    {
      "name": "gst-plugins-bad",
      "buildsystem": "meson",
      "no-make-install": true,
      "make-args": ["ext/faad/libgstfaad.so"],
      "post-install": [
        "install -Dm644 --target-directory=/app/lib/gstreamer-1.0 ext/faad/libgstfaad.so"
      ],
      "sources": [{
        "type": "archive",
        "url": "https://gstreamer.freedesktop.org/src/gst-plugins-bad/gst-plugins-bad-1.14.0.tar.xz",
        "sha256": "ed5e2badb6f2858f60017b93334d91fe58a0e3f85ed2f37f2e931416fafb4f9f"
      }],
      "modules": [{
        "name": "faad",
        "cleanup": [ "/bin", "/include", "/share", "/lib/*.la" ],
        "config-opts": [ "--disable-static", "--without-drm" ],
        "post-install": [ "rm /app/lib/libfaad_drm*" ],
        "sources": [
          {
            "type": "archive",
            "url": "http://downloads.sourceforge.net/sourceforge/faac/faad2-2.8.8.tar.gz",
            "sha256": "985c3fadb9789d2815e50f4ff714511c79c2710ac27a4aaaf5c0c2662141426d"
          },
          {
            "type": "script",
            "dest-filename": "autogen.sh",
            "commands": [ "exec ./bootstrap \"$@\"" ]
          }
        ]}
      ]
    },
    {
      "name": "pylast",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --prefix=/app pylast-1.8.0-py3-none-any.whl"
      ],
      "sources": [{
        "type": "file",
        "url": "https://dl.tingping.se/mirror/pylast-1.8.0-py3-none-any.whl",
        "sha256": "98ffacaba10ba8e123c750993a24396d058d3e21e4d4f1e93f0dd085956457d3"
      }],
      "modules": [{
        "name": "six",
        "buildsystem": "simple",
        "build-commands": [
          "pip3 install --prefix=/app six-1.10.0-py2.py3-none-any.whl"
        ],
        "sources": [{
          "type": "file",
          "url": "https://pypi.python.org/packages/c8/0a/b6723e1bc4c516cb687841499455a8505b44607ab535be01091c0f24f079/six-1.10.0-py2.py3-none-any.whl#md5=3ab558cf5d4f7a72611d59a81a315dc8",
          "sha256": "0ff78c403d9bccf5a425a6d31a12aa6b47f1c21ca4dc2573a7e2f32a97335eb1"
        }]
      }]
    },
    {
      "name": "keybinder",
      "cleanup": ["/lib/*.la", "/include", "/share", "/lib/pkgconfig"],
      "sources": [{
        "type": "archive",
        "url": "https://github.com/kupferlauncher/keybinder/releases/download/keybinder-3.0-v0.3.2/keybinder-3.0-0.3.2.tar.gz",
        "sha256": "e6e3de4e1f3b201814a956ab8f16dfc8a262db1937ff1eee4d855365398c6020"
      }]
    },
    {
      "name": "pithos",
      "buildsystem": "meson",
      "cleanup": ["/share/man"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/pithos/pithos/releases/download/1.4.1/pithos-1.4.1.tar.xz",
          "sha256": "ebc30213ae85716d5a57e30b912f083b2fdb374a793d5adfec00a064fdfc165c"
        }
      ]
    }
  ]
}
