{
  "name": "ffmpeg",
  "cleanup": [ "/include", "/lib/pkgconfig", "/share/ffmpeg/examples" ],
  "build-options" : {
    "arch" : {
      "i386" : {
        "config-opts" : [
          "--arch=x86"
        ]
      },
      "arm" : {
        "config-opts" : [
          "--arch=arm"
        ]
      }
    }
  },
  "config-opts": [
    "--enable-shared",
    "--disable-static",
    "--disable-everything",
    "--enable-gnutls",
    "--enable-decoder=mp3",
    "--enable-decoder=aac"
  ],
  "sources": [{
    "type": "archive",
    "url": "https://ffmpeg.org/releases/ffmpeg-3.3.tar.xz",
    "sha256": "599e7f7c017221c22011c4037b88bdcd1c47cd40c1e466838bc3c465f3e9569d"
  }]
}
